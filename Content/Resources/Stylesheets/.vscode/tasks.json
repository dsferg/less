// Less configuration
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Less Compile",
            "type": "shell",
            //On the next line, replace MainStyles.less with your primary 
            //LESS file and MainStyles.css with the name of the stylesheet 
            //you want LESS to generate.
            "command": "lessc MainStyles.less MainStyles.css",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}